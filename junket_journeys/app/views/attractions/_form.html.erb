<%= form_for attraction do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>

<%= f.label :address %>
<%= f.text_field :address %><br>

<%= f.label :contact_info %>
<%= f.text_field :contact_info %><br>

<%= f.hidden_field :city_id, value: params[:id].to_i %>

  <%= f.fields_for attraction.reviews.build do |review_field| %>
  <%= review_field.label :content %>
  <%= review_field.text_field :content %><br>
  <%= review_field.label :rating %>
  <%= review_field.text_field :rating %><br>
  <% end %>
<%= f.submit %>
<% end %>
